<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleName</key>
    <string>KoboldOS Control Panel</string>
    <key>CFBundleIdentifier</key>
    <string>com.koboldos.controlpanel</string>
    <key>CFBundleVersion</key>
    <string>0.3.3</string>
    <key>CFBundleShortVersionString</key>
    <string>0.3.3</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleExecutable</key>
    <string>KoboldOSControlPanel</string>
    <key>CFBundleIconFile</key>
    <string>AppIcon</string>
    <key>LSMinimumSystemVersion</key>
    <string>14.0</string>
    <key>NSHighResolutionCapable</key>
    <true/>
    <key>NSHumanReadableCopyright</key>
    <string>Copyright © 2026 KoboldOS. All rights reserved.</string>
    <key>NSPrincipalClass</key>
    <string>NSApplication</string>

    <!-- Privacy Permission Descriptions -->
    <key>NSCalendarsUsageDescription</key>
    <string>KoboldOS benötigt Zugriff auf deinen Kalender um Termine zu erstellen, lesen und verwalten.</string>
    <key>NSCalendarsFullAccessUsageDescription</key>
    <string>KoboldOS benötigt vollen Kalender-Zugriff um Termine zu erstellen und zu verwalten.</string>
    <key>NSRemindersUsageDescription</key>
    <string>KoboldOS benötigt Zugriff auf Erinnerungen um Aufgaben zu erstellen und zu verwalten.</string>
    <key>NSRemindersFullAccessUsageDescription</key>
    <string>KoboldOS benötigt vollen Zugriff auf Erinnerungen um sie zu erstellen und zu verwalten.</string>
    <key>NSContactsUsageDescription</key>
    <string>KoboldOS benötigt Zugriff auf deine Kontakte um Namen, Nummern und E-Mail-Adressen zu finden.</string>
    <key>NSAppleEventsUsageDescription</key>
    <string>KoboldOS benötigt AppleScript-Zugriff um macOS-Apps wie Mail, Messages, Safari und Finder zu steuern.</string>
    <key>NSAppleScriptEnabled</key>
    <true/>
    <key>NSLocalNetworkUsageDescription</key>
    <string>KoboldOS benötigt lokalen Netzwerkzugriff für den Daemon-Server und die WebApp-Fernsteuerung.</string>

    <!-- URL Scheme for OAuth2 callbacks -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLName</key>
            <string>com.koboldos.oauth</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>koboldos</string>
            </array>
        </dict>
    </array>
</dict>
</plist>
